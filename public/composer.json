{
    "name": "websync/framework",
    "description": "Il framework PHP di WebSync",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "WebSync",
            "email": "info@websync.it"
        }
    ],
    "require": {
        "egulias/email-validator": "^4.0",
        "google/recaptcha": "^1.1",
        "guzzlehttp/guzzle": "^7.10",
        "htmlawed/htmlawed": "^1.2",
        "kint-php/kint": "^6.0",
        "kint-php/kint-helpers": "^6.0",
        "microsoft/microsoft-graph": "^2.48",
        "monolog/monolog": "^3.5",
        "mos/cimage": "^0.8.5",
        "phpmailer/phpmailer": "^6.10",
        "shuttle/export": "dev-master",
        "soundasleep/html2text": "^2.1",
        "symfony/cache": "^7.3",
        "symfony/mailer": "^7.0",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.48",
        "friendsofphp/php-cs-fixer": "^3.88",
        "marcocesarato/amwscan": "^0.14.0",
        "rector/rector": "2.1.7"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "shuttle/export",
                "version": "dev-master",
                "source": {
                    "type": "git",
                    "url": "https://github.com/2createStudio/shuttle-export.git",
                    "reference": "master"
                }
            }
        }
    ],
    "autoload": {
        "classmap": [
            "./wscms/interfaces/",
            "./wscms/classes/"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "tbachert/spi": true
        },
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": "@post-cmd",
        "post-update-cmd": "@post-cmd",
        "amwscan": "@php -d max_execution_time=0 -d memory_limit=-1 -f ./vendor/marcocesarato/amwscan/dist/scanner -- --report --ignore-paths=\"/vendor\" --path-logs=\"./var/log/scanner.log\" --path-report=\"./var/tmp/scanner-report.html\" .",
        "lint": "@lint:fix --dry-run",
        "lint:fix": "@php -d max_execution_time=0 -d memory_limit=-1 -f ./vendor/bin/php-cs-fixer fix --diff",
        "post-cmd": "rm -f vendor/mos/cimage/webroot/img_config.php || true",
        "rector": "@rector:fix --dry-run",
        "rector:fix": "@php -d max_execution_time=0 -d memory_limit=-1 -f ./vendor/bin/rector -- process --ansi --clear-cache"
    }
}
